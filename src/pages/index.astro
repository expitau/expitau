---
import Layout from "../layouts/Layout.astro";
import { projects } from "../util/content";
---

<Layout title="Home">
	<style>
		#main-container {
			display: flex;
			flex-direction: row;
			gap: 8rem;
		}

		#main-title {
			padding: 8rem 0;
			flex: 1;
			position: sticky;
			display: flex;
			flex-direction: column;
			justify-content: space-between;
			top: 0;
			height: calc(100vh - 12rem - 12rem);
		}

		#main-content {
			flex: 1;
			padding: 6rem 0;
		}

		#main-title--text {
			display: flex;
			flex-direction: column;
			gap: 2rem;
		}

		#main-title--social-links {
			display: flex;
			flex-direction: row;
			gap: 1rem;
		}

		#main-title--social-links > a {
			color: var(--text-secondary);
		}

		#main-title--social-links > a:hover {
			color: var(--text);
			transition: color var(--transition-s) ease;
		}

		#main-nav {
			list-style-type: none;
			padding: 0;
			display: flex;
			flex-direction: column;
			width: 10rem;
		}

		#main-nav a {
			display: flex;
			flex-direction: row;
			align-items: center;
			gap: 0.5rem;
			text-transform: uppercase;
			font-size: 12px;
			padding: 0.8rem 0;
			color: var(--text-secondary);
			transition: color var(--transition-s) ease background-color
				var(--transition-s) ease;
		}

		#main-nav a:hover {
			color: var(--text);
		}

		#main-nav a > :first-child {
			display: block;
			background-color: var(--text-secondary);
			height: 1px;
			width: 24px;
			transition: width var(--transition-s) ease;
		}

		#main-nav a:hover > :first-child {
			display: block;
			background-color: var(--text);
			height: 1px;
			width: 48px;
		}

		#main-projects {
			display: flex;
			flex-direction: column;
			gap: 1rem;
		}

		#main-projects > * {
			display: flex;
			text-align: left;
			flex-direction: row;
			align-items: center;
			gap: 2rem;
		}

		#main-projects > * > *:first-child {
			width: calc(70% - 1rem);
		}

		#main-projects > * > img:first-child {
			width: calc(30% - 1rem);
			height: fit-content;
			object-fit: cover;
			aspect-ratio: 1.6;
			margin: 0.3rem;
		}

		#main-content > h2 {
			margin-top: 2rem;
		}

		@media (max-width: 1750px) {
			main {
				padding: 0 8rem;
			}
			#main-projects > * > img:first-child {
				margin: 0;
			}
		}

		@media (max-width: 1300px) {
			main {
				padding: 0 8rem;
			}
			#main-container {
				flex-direction: column;
				gap: 2rem;
			}

			#main-title {
				position: relative;
				height: fit-content;
				padding: 4rem 0 0 0;
			}

			#main-content {
				padding: 0 0 4rem 0;
			}

			#main-title--text {
				flex-direction: row-reverse;
				justify-content: space-between;
				align-items: center;
				gap: 3rem;
			}

			#main-title--social-links {
				margin: auto;
				padding: 3rem 0;
			}
			#main-projects > * > img:first-child {
				margin: 0.3rem;
			}
		}

		@media (max-width: 720px) {
			main {
				padding: 0 4rem;
			}

			#main-title h1,
			#main-title h2,
			#main-title p {
				text-align: center;
				margin: auto;
				width: 100%;
				padding-bottom: 0.5rem;
			}
			#main-title {
				margin: 8rem 0 0 0;
			}
			#main-title--text {
				flex-direction: column-reverse;
			}

			#main-nav {
				flex-direction: row;
				justify-content: center;
				gap: 2rem;
				margin: 0;
				width: 100vw;
				position: fixed;
				background: var(--background);
				top: 0;
				padding: 1rem;
			}

			#main-nav a > :first-child {
				display: none !important;
			}
			#main-projects > * > img:first-child {
				margin: 0;
			}
		}

		@media (max-width: 480px) {
			main {
				padding: 0 1rem;
			}
			#main-title {
				padding: 4rem 0 0 0;
			}
		}
	</style>
	<main>
		<div id="main-container">
			<div id="main-title">
				<div id="main-title--text">
					<div>
						<h1 style="margin-top: 0">Nathan DSilva</h1>
						<h2 style="margin-top: 0">
							4A Computational mathematics student at uWaterloo
						</h2>
						<p style="margin-bottom: 0">
							I'm a professional software developer skilled in web
							and machine learning technologies.
						</p>
					</div>

					<nav id="main-nav">
						<li>
							<a href="/about">
								<span></span>
								<span>About</span>
							</a>
						</li>
						<li>
							<a href="/projects">
								<span></span>
								<span>Projects</span>
							</a>
						</li>
						<li>
							<a href="/blog">
								<span></span>
								<span>Blog</span>
							</a>
						</li>
						<li>
							<a href="/resume/resume.pdf">
								<span></span>
								<span>Résumé</span>
							</a>
						</li>
					</nav>
				</div>

				<div id="main-title--social-links">
					<a href="https://github.com/expitau" target="_blank">
						<span class="sr-only">Follow me on Github</span>
						<svg
							viewBox="0 0 16 16"
							aria-hidden="true"
